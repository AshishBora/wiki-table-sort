{
  "manifest_version": 3,
  "name": "Wikipedia Table Sorter",
  "version": "1.0.0",
  "description": "Sort Wikipedia tables in edit mode by any column",
  
  "icons": {
    "16": "icon_small.png",
    "32": "icon_small.png", 
    "48": "icon_small.png",
    "128": "icon_small.png"
  },
  
  
  "content_scripts": [
    {
      "matches": [
        "*://*.wikipedia.org/w/index.php*action=edit*"
      ],
      "js": [
        "table-parser.js",
        "table-sorter.js", 
        "ui-components.js",
        "content-script.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ],
  
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Wikipedia Table Sorter",
    "default_icon": {
      "16": "icon_small.png",
      "32": "icon_small.png",
      "48": "icon_small.png", 
      "128": "icon_small.png"
    }
  }
}